.button-column
  width 100% !important

.hide
  position absolute !important
  top -9999px !important
  left -9999px !important

.flat_button
  border none !important
  margin 10px !important
  padding 30px !important
  text-shadow 0 1px rgba(0, 0, 0, 0.3) !important
  cursor pointer
  transition background 0.1s ease-in-out
  -webkit-transition background 0.1s ease-in-out
  -moz-transition background 0.1s ease-in-out
  -ms-transition background 0.1s ease-in-out
  -o-transition background 0.1s ease-in-out
  border-radius 10px !important
  -moz-border-radius 10px
  -webkit-border-radius 10px

.myDescriptors
  padding-top 15px !important
  font-size 40px !important
  color white !important
  font-weight bold

.small_myDescriptors
  padding-top 20px !important
  font-size 20px !important
  color white !important
  font-weight bold

a
  &.IN_FOR_DAY
    &.primary-button
      background-color #3fb8e8 !important
      box-shadow 0px 10px 0px 0px #3293ba !important
      &:hover
        background-color #1baae3 !important
  &.OUT_FOR_DAY
    &.primary-button
      background-color #f06060 !important
      box-shadow 0px 10px 0px 0px #cd1313 !important
      &:hover
        background-color #ed4444 !important

.TIME_SHEET_ALT
  background-color #975FEF !important
  box-shadow 0px 10px 0px 0px #5912CC !important
  &:hover
    background-color #8544ED !important

.TIME_SHEET
  position absolute !important
  top -9999px !important
  left -9999px !important

.LOGOUT
